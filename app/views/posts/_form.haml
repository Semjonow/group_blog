= form_for @post, :remote => true do |form|
  %fieldset
    %legend
      %i.icon-pencil
      New post

    .row
      = form.text_area :text, :rows => 40, :cols => 120, :data => { :block => "redactor" }

    .buttons.row
      = link_to "javascript:void(0)", :class => "button success", :data => { :action => "submit" } do
        %i.icon-ok
        Save

      = link_to "Cancel", "javascript:void(0)", :class => "button secondary right", :data => { :action => "close" }
